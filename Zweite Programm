using System;

class Wortspiel
{
    static void Main()
    {
        string gesuchtesWort = "apfel";
        string benutzerAntwort;
        int versuche = 0;

        Console.WriteLine("Willkommen beim Wortspiel!");
        Console.WriteLine("Versuche, das gesuchte Wort zu erraten.");

        do
        {
            Console.Write("Dein Tipp: ");
            benutzerAntwort = Console.ReadLine();
            versuche++;

            if (benutzerAntwort.ToLower() == gesuchtesWort)
            {
                Console.WriteLine($"Gl√ºckwunsch! Du hast das Wort \"{gesuchtesWort}\" in {versuche} Versuchen erraten.");
            }
            else
            {
                Console.WriteLine("Das ist nicht das gesuchte Wort. Versuche es erneut.");
            }

        } while (benutzerAntwort.ToLower() != gesuchtesWort);

        Console.ReadLine();
    }
}
